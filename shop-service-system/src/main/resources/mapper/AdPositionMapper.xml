<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.chengzhx76.service.system.dao.AdPositionDaoMapper">
  <sql id="tableName">ad_position</sql>
  <sql id="columns">
    a.id,a.name,a.type,a.remarks,a.create_date,a.update_date,a.status
  </sql>
  <sql id="insertColumns">
    id,name,type,remarks,create_date,update_date,status
  </sql>
  <sql id="adPositionIf">
    <if test="id != null and id != ''">id=#{id},</if>
    <if test="name != null and name != ''">name=#{name},</if>
    <if test="type != null and type != ''">type=#{type},</if>
    <if test="remarks != null and remarks != ''">remarks=#{remarks},</if>
    <if test="createDate != null and createDate != ''">create_date=#{createDate},</if>
    <if test="updateDate != null and updateDate != ''">update_date=#{updateDate},</if>
    <if test="status != null and status != ''">status=#{status}</if>
  </sql>
  <sql id="adPositionSelector">
    select
      <include refid="columns"/>
    from
      <include refid="tableName"/> AS a
  </sql>

  <sql id="adPositionWhere">
    <where>
      <if test="id != null and id != ''">
        id = #{id}
      </if>
      <choose>
        <when test="status != null and status !=''">
          AND status = #{status}
        </when>
        <otherwise>
          AND status != 'DELETE'
        </otherwise>
      </choose>
    </where>
  </sql>

  <sql id="adPositionUpdate">
    <trim prefix="SET" suffixOverrides=",">
      <include refid="adPositionIf"/>
    </trim>
  </sql>

<!-- =================================================================== -->

  <!-- 根据ID获取图片 -->
  <select id="load" parameterType="Ad" resultType="Ad">
    <include refid="adPositionSelector"/>
    <include refid="adPositionWhere"/>
  </select>
  <!-- 获取全部图片信息 -->
  <select id="loadAll" resultType="Ad">
    <include refid="adPositionSelector"/>
    <include refid="adPositionWhere"/>
  </select>

  <!-- 更新 -->
  <update id="update" parameterType="Ad">
    UPDATE <include refid="tableName"/>
    <include refid="adPositionUpdate"/>
    <include refid="adPositionWhere"/>
  </update>
  <!-- 插入 -->
  <insert id="save" parameterType="Ad">
    INSERT INTO
    <include refid="tableName"/>
    (
    <include refid="insertColumns"/>
    )
    VALUES
    <include refid="adPositionIf"/>
  </insert>

</mapper>

